<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_red</item>
    </style>

    <style name="BigTextStyle">
        <item name="android:textSize">200sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="HiitSetupLabel">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/gray_green</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RedBorderlessButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/main_red</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedBorderlessButton.Large">
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>



</resources>
