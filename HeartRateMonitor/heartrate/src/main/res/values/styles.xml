<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Main theme colors -->
        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:colorButtonNormal">@color/accent</item>
    </style>

    <style name="BigTextStyle">
        <item name="android:textSize">200sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="HiitSetupLabel">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/gray_green</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RedBorderlessButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedBorderlessButton.Large">
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <!--<style name="Stand"-->



</resources>
